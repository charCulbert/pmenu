<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="pmenu" module="max" category="U/I">
	<digest>
		Pop-up menu with hierarchical listings 
	</digest>
	<description>
		Displays a pop-up menu. Selections will be output the first outlet and optional data can be attached to each entry. 
	</description>
	<metadatalist>
		<metadata name="author">
			Todd Ingalls 
		</metadata>
		<metadata name="tag">
			U/I 
		</metadata>
		<metadata name="tag">
			U/I 
		</metadata>
	</metadatalist>
	<inletlist>
		<inlet id="0" type="INLET_TYPE">
			<digest>
				Messages in 
			</digest>
			<description>
				Messages to pmenu 
			</description>
		</inlet>
	</inletlist>
	<outletlist>
		<outlet id="0" type="OUTLET_TYPE">
			<digest>
				Menu item as message 
			</digest>
			<description>
				Menu item evaluated as message and prepended with optional prefix 
			</description>
		</outlet>
		<outlet id="1" type="OUTLET_TYPE">
			<digest>
				Selected Item ID 
			</digest>
			<description>
				Item ID of selected item 
			</description>
		</outlet>
		<outlet id="2" type="OUTLET_TYPE">
			<digest>
				Data associated with selected item. 
			</digest>
			<description>
				Arbitrary data associated with menu item 
			</description>
		</outlet>
	</outletlist>
	<methodlist>
		<method name="dictionary">
			<arglist>
			</arglist>
			<digest>
				Name of dictionary to use to build menu 
			</digest>
			<description>
				Name of dictionary to use to build menu 
			</description>
		</method>
	</methodlist>
	<attributelist>
		<attribute name="prefix" get="1" set="1" type="symbol" size="1">
			<digest>
				Output prefix 
			</digest>
			<description>
				Sets a menu-wide prefix that will be prepended to all menu items when output 
			</description>
			<attributelist>
				<attribute name="category" get="1" set="1" type="symbol" size="1" value="Value" />
				<attribute name="default" get="1" set="1" type="int" size="1" value="1" />
				<attribute name="label" get="1" set="1" type="symbol" size="1" value="Symbol to prepend" />
				<attribute name="save" get="1" set="1" type="int" size="1" value="1" />
				<attribute name="style" get="1" set="1" type="symbol" size="1" value="onoff" />
			</attributelist>
		</attribute>
	</attributelist>
	<examplelist>
		<example img="pmenu.png" caption="Used to send commands ...or to display text associated with numbers received" />
	</examplelist>

	<seealsolist>
		<seealso name="umenu" /> 
		<seealso name="coll" /> 
	</seealsolist>
	<discsussion>

		
			
		
	</discsussion>
</c74object>
